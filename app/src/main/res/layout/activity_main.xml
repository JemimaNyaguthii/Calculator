<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="2pt"
    tools:context=".MainActivity"
    android:background="#212529">

    <EditText
        android:id="@+id/eteditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layoutWeight="1"
        android:inputType="textPersonName"
        android:textSize="38pt"
        android:gravity ="right"
        android:text="0" />

    <TableLayout
        android:layout_marginBottom="1pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">


    <Button
        android:id="@+id/btnPlus"
        android:layout_width="30pt"
        android:layout_height="30pt"
        android:background="grey"
        android:layout_weight="1"
        android:text="+"
        >
    </Button>
            <Button
                android:id="@+id/btnMinus"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:background="grey"
                android:layout_weight="1"
                android:text="-"
                >
            </Button>
            <Button
                android:id="@+id/btnDivide"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="grey"

                android:text="/"
                >
            </Button>

            <Button
                android:id="@+id/btnMultiply"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="grey"
                android:text="*"
                >

            </Button>
        </TableRow>

    </TableLayout>

    <TableLayout
        android:layout_marginBottom="1pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn9"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:text="9"
                android:background="grey"
                >
            </Button>
            <Button
                android:id="@+id/btn8"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:background="grey"
                android:layout_weight="1"
                android:text="8"
                >
            </Button>
            <Button
                android:id="@+id/btn7"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="grey"

                android:text="7"
                >
            </Button>

            <Button
                android:id="@+id/btn6"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="grey"
                android:text="6"
                >

            </Button>
        </TableRow>

    </TableLayout>
    <TableLayout
        android:layout_marginBottom="1pt"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn5"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:background="grey"
            android:layout_weight="1"
            android:text="5"
            >
        </Button>
        <Button
            android:id="@+id/btn4"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:background="grey"
            android:layout_weight="1"
            android:text="4"
            >
        </Button>
        <Button
            android:id="@+id/btn3"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_weight="1"
            android:background="grey"
            android:text="3"
            >
        </Button>
        <Button
            android:id="@+id/btn2"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_weight="1"
            android:background="grey"
            android:text="2"
            >

        </Button>
    </TableRow>

</TableLayout>
    <TableLayout
        android:layout_marginBottom="1pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <Button
        android:id="@+id/btn1"
        android:layout_width="30pt"
        android:layout_height="30pt"
        android:layout_weight="1"
        android:background="grey"
        android:text="1"
        >

    </Button>
</TableRow>

    </TableLayout>


</LinearLayout>


